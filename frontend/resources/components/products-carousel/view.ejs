<div class="margin-bottom--62px">
    <h2 class="z-2 f16 header-wrap relative b pa-heading-panel dib b-top-right-radius-5 bg-theme-color white lh-30">
        <%= heading %>
    </h2>
    <amp-carousel
            height="650"
            layout="fixed-height"
            type="carousel"
            class="none-scrollbar slider-no-padding-container z-1 tc"
            controls
    >
        <% for(let i = 0; i < products.length; i += 2){ %>
            <div class="no-padding-item ws-normal w-212 v-top"
            >
                <% let productData = products[i] %>
                <% let productData1 = products[i + 1] %>
                <%- include('../product-card/product', {product: productData}); %>
                <% if(productData1){ %>
                    <%- include('../product-card/product', {product: productData1}); %>
                <% } %>
            </div>
        <% } %>
    </amp-carousel>
</div>
